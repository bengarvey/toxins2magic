{
  "manifest_version": 2,

  "name": "Toxins2Magic",
  "description": "Replaces all mentions of the word \"toxin\" or \"toxins\" with \"Black Magic\"",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.js", "replaceToxins.js"],
      "run_at": "document_end"
    }
  ]
}
